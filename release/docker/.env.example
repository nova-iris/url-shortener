# URL Shortener Application Configuration
# Copy this file to .env in the release directory and modify as needed

# Node.js environment: development, production, test
NODE_ENV=production

# Server port
PORT=5000

# MongoDB credentials
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=IcKeW8b5wxMixE7ByYMkkJ1389/+he4cL7UHi9iEoZc=

# MongoDB host - for docker compose this is the service name
MONGODB_HOST=mongo

# MongoDB port - default is 27017
MONGODB_PORT=27017

# MongoDB database name
MONGODB_DATABASE=urlshortener

# Backend Public URL - This is used for:
# 1. Browser access to the backend API
# 2. Creating short URLs with the correct base URL
# For local development use: http://localhost:5000
# For production, use your domain, e.g.: https://api.example.com
BACKEND_PUBLIC_URL=http://localhost:5000

# Client configuration - the URL where the frontend is accessible
CLIENT_URL=http://localhost:4173